<div class="w-full max-w-md lg:max-w-lg bg-white shadow-xl rounded-xl p-8 space-y-6
            absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">

  <h2 class="text-2xl font-bold text-center text-gray-800">Admin Login</h2>
  
  <%= form_with url: admin_auth_login_path, method: :post, local: true do |f| %>
    <div class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700">Email</label>
        <%= f.email_field :email, required: true,
          class: "mt-1 w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Password</label>
        <%= f.password_field :password, required: true,
          class: "mt-1 w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.submit "Log In",
          class: "w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors" %>
      </div>
    </div>
  <% end %>

  <!-- Optional: Forgot password link -->
  <div class="text-center text-sm text-gray-500 mt-2">
    <a href="#" class="hover:text-blue-600">Forgot password?</a>
  </div>
</div>
