<div class="w-full max-w-full md:max-w-5xl mx-auto p-10 bg-white shadow-lg rounded-xl space-y-4">

<% if @booking.errors.any? %>
  <div class="mb-6 rounded-lg border border-red-300 bg-red-50 p-4">
    <h3 class="text-red-700 font-semibold mb-2">
      Please fix the following errors:
    </h3>
    <ul class="list-disc list-inside text-red-600 text-sm space-y-1">
      <% @booking.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  
 <h1 class="text-3xl font-bold mb-6 text-center ">Book Flight</h1>
  <%= form_with model: [@flight, @booking], local: true, class: "max-w-lg mx-auto bg-white shadow-lg rounded-xl p-6 space-y-6" do |f| %>
  
  <!-- Flight Info Card -->
  <div class="border-b pb-4 mb-6">
    <p class="text-lg font-bold text-gray-800 mb-1">Flight <%= @flight.flight_number %></p>
    <p class="text-gray-800 mb-1"><span class="font-semibold"><%= @flight.from_city %></span> → <span class="font-semibold"><%= @flight.to_city %></span></p>
    <p class="text-sm text-gray-700 mb-1">
      <strong>Departure:</strong> <%= @flight.departure_time.strftime("%d %b %Y %H:%M") %> &nbsp;|&nbsp;
      <strong>Arrival:</strong> <%= @flight.arrival_time.strftime("%d %b %Y %H:%M") %>
    </p>
    <p class="text-gray-700 mb-3"><strong>Price:</strong> $<%= @flight.price %></p>
  </div>

  <!-- Hidden Flight ID -->
  <%= f.hidden_field :flight_id %>
      <!-- CONTACT INFO -->
      <h3 class="text-lg font-semibold mb-3">Contact Information</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
        <div>
          <label class="text-sm text-gray-600">Email</label>
          <%= f.email_field :email, class: "mt-1 w-full border rounded px-3 py-2" %>
        </div>

        <div>
          <label class="text-sm text-gray-600">Phone</label>
          <%= f.text_field :phone, class: "mt-1 w-full border rounded px-3 py-2" %>
        </div>
      </div>
      <!-- PASSENGER -->
      <h3 class="text-lg font-semibold mb-3">Passenger Details</h3>
      <%= f.fields_for :passengers do |p| %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
          <%= p.text_field :full_name, placeholder: "Full name", class: "border rounded px-3 py-2" %>
          <%= p.text_field :passport_number, placeholder: "Passport number", class: "border rounded px-3 py-2" %>
          <%= p.date_field :date_of_birth, class: "border rounded px-3 py-2" %>
          <%= p.text_field :nationality, placeholder: "Nationality", class: "border rounded px-3 py-2" %>
        </div>
        <% end %>
        <!-- ACTIONS -->
      <div class="flex justify-between items-center">
        <%= link_to "← Back", root_path, class: "px-6 py-2 border rounded" %>
        <%= f.submit "Continue", class: "bg-blue-600 text-white px-6 py-2 rounded" %>
      </div>
  <% end %>
</div>