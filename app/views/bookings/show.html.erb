<div class="max-w-full sm:max-w-3xl md:max-w-5xl lg:max-w-4xl mx-auto p-6 md:p-10 bg-white shadow-lg rounded-xl space-y-8">

  <!-- Title -->
  <h1 class="text-3xl font-bold text-center text-gray-800">
    Booking Confirmation
  </h1>

  <!-- Flight Info -->
  <div class="space-y-2 border-b pb-6">
    <h2 class="text-xl font-semibold text-gray-800">
      Flight <%= @booking.flight.flight_number %>
    </h2>

    <p class="text-gray-700">
      <span class="font-medium">Route:</span>
      <%= @booking.flight.from_city %> â†’ <%= @booking.flight.to_city %>
    </p>

    <p class="text-gray-700">
      <span class="font-medium">Email:</span>
      <%= @booking.email %>
    </p>

    <p class="text-gray-700">
      <span class="font-medium">Phone:</span>
      <%= @booking.phone %>
    </p>
  </div>

  <!-- Passengers -->
  <div class="space-y-4">
    <h3 class="text-lg font-semibold text-gray-800 mb-2">
      Passengers
    </h3>

    <% @booking.passengers.each_with_index do |p, i| %>
      <div class="border-l-4 border-blue-500 pl-4 py-3 bg-gray-50 rounded-md shadow-sm">
        <p class="font-medium text-gray-800 mb-2">
          Passenger <%= i + 1 %>
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-2 text-gray-700">
          <p><span class="font-medium">Full Name:</span> <%= p.full_name %></p>
          <p><span class="font-medium">Passport:</span> <%= p.passport_number %></p>
          <p><span class="font-medium">Date of Birth:</span> <%= p.date_of_birth.strftime("%d %b %Y") %></p>
          <p><span class="font-medium">Nationality:</span> <%= p.nationality %></p>
          <p><span class="font-medium">Seat Type:</span> <%= p.seat_type.capitalize %></p>
        </div>
      </div>
    <% end %>
    <!-- Total Price -->
<div class="mt-6 p-4 bg-gray-100 rounded-lg shadow-sm">
  <div class="space-y-2">
    <% @booking.passengers.each do |p| %>
      <div class="flex justify-between text-gray-700">
        <span>
          <%= p.full_name %> (<%= p.seat_type.capitalize %>)
        </span>
        <span>
          $<%= number_with_precision(p.price, precision: 2) %>
        </span>
      </div>
    <% end %>
  </div>

  <div class="flex justify-between font-semibold text-lg text-gray-800 border-t mt-4 pt-3">
    <span>Total Price</span>
    <span>
      $<%= number_with_precision(@booking.total_price, precision: 2) %>
    </span>
  </div>
</div>

  </div>

  <!-- Actions -->
  <div class="text-center pt-6 border-t">
    <%= link_to "Done",
      root_path,
      class: "inline-block bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700 transition"
    %>
  </div>

</div>
