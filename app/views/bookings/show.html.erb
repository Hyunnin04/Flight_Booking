<div class="max-w-3xl mx-auto p-6 bg-white shadow rounded-lg space-y-4">
  <h1 class="text-3xl font-bold text-center text-gray-800">Booking Confirmation</h1>

  <!-- Flight Info -->
  <div class="space-y-2 border-b pb-4">
    <h2 class="text-xl font-semibold text-gray-800">Flight <%= @booking.flight.flight_number %></h2>
    <p class="text-gray-700"><span class="font-medium">Route:</span> <%= @booking.flight.from_city %> â†’ <%= @booking.flight.to_city %></p>
    <p class="text-gray-700"><span class="font-medium">Email:</span> <%= @booking.email %></p>
    <p class="text-gray-700"><span class="font-medium">Phone:</span> <%= @booking.phone %></p>
  </div>

  <!-- Passengers -->
  <h3 class="text-lg font-semibold text-gray-800">Passengers</h3>
  <div class="space-y-4">
    <% @booking.passengers.each_with_index do |p, i| %>
      <div class="border rounded-lg p-4 shadow-sm bg-gray-50 space-y-2">
        <p><span class="font-medium">Passenger <%= i+1 %>:</span> <%= p.full_name %></p>
        <p><span class="font-medium">Passport:</span> <%= p.passport_number %></p>
        <p><span class="font-medium">Date of Birth:</span> <%= p.date_of_birth %></p>
        <p><span class="font-medium">Nationality:</span> <%= p.nationality %></p>
      </div>
    <% end %>
  </div>

  <!-- Done Button -->
  <div class="text-center mt-6">
    <%= link_to "Done", root_path, class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors" %>
  </div>
</div>
